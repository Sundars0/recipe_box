<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Log In</h2>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true, wrapper_html: { class: 'email' } %>
		    <%= f.input :password, required: false, wrapper_html: { class: 'password' } %>
		    <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'options' } if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
		  </div>
		  <br>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>


